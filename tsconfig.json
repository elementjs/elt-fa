{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "declaration": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "strict": true,
        "noUnusedLocals": true,
        "outDir": "./lib",
        "rootDir": "./src",
        "jsx": "react",
        "jsxFactory": "e",
        "experimentalDecorators": true,
        "lib": ["es6", "dom"],
        "types": []
    },
    "include": ["./src/**/*"]
}
